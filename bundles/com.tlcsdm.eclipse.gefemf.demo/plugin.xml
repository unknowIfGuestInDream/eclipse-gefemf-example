<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="GEF EMF Demo"
            id="com.tlcsdm.eclipse.gefemf.demo.category">
      </category>
      <view
            category="com.tlcsdm.eclipse.gefemf.demo.category"
            class="com.tlcsdm.eclipse.gefemf.demo.palette.PaletteView"
            id="com.tlcsdm.eclipse.gefemf.demo.paletteView"
            name="Palette"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.tlcsdm.eclipse.gefemf.demo.editor.DiagramEditor"
            default="true"
            extensions="gefxml"
            icon="icons/sample.png"
            id="com.tlcsdm.eclipse.gefemf.demo.editor"
            name="LVGL UI Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="com.tlcsdm.eclipse.gefemf.demo.category"
            class="com.tlcsdm.eclipse.gefemf.demo.wizard.NewDiagramWizard"
            icon="icons/sample.png"
            id="com.tlcsdm.eclipse.gefemf.demo.wizard.newDiagram"
            name="New Diagram File">
      </wizard>
      <category
            id="com.tlcsdm.eclipse.gefemf.demo.category"
            name="GEF EMF Demo">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="com.tlcsdm.eclipse.gefemf.demo.menus.file"
               label="File">
            <command
                  commandId="org.eclipse.ui.newWizard"
                  id="newWizard"
                  label="New"
                  style="push">
            </command>
            <separator
                  name="separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  id="quit"
                  label="Exit"
                  style="push">
            </command>
         </menu>
         <menu
               id="com.tlcsdm.eclipse.gefemf.demo.menus.generate"
               label="Generate">
            <command
                  commandId="com.tlcsdm.eclipse.gefemf.demo.commands.generate"
                  id="generateCode"
                  label="Generate C Code"
                  style="push">
            </command>
         </menu>
         <menu
               id="com.tlcsdm.eclipse.gefemf.demo.menus.help"
               label="Help">
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  id="about"
                  label="About"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="com.tlcsdm.eclipse.gefemf.demo.toolbar">
            <command
                  commandId="com.tlcsdm.eclipse.gefemf.demo.commands.generate"
                  icon="icons/generate.png"
                  id="generateButton"
                  label="Generate C Code"
                  style="push"
                  tooltip="Generate LVGL C Code from Diagram">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.tlcsdm.eclipse.gefemf.demo.commands.generate"
            name="Generate C Code">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="com.tlcsdm.eclipse.gefemf.demo.commands.generate"
            class="com.tlcsdm.eclipse.gefemf.demo.handler.GenerateCodeHandler">
      </handler>
   </extension>
</plugin>
